# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and functions
stty -ixon

source /etc/bash_completion.d/git
alias v='vim'
alias g='git'
alias bbu-make='cd $HOME/baseband/bld && /usr/local/bin/unshare-make.sh -sj35 && cd --'
alias bbu-make-check='cd $HOME/baseband/bld && /usr/local/bin/unshare-make.sh check -sj35 && cd --'
alias bbu-make-distcheck='cd $HOME/baseband/bld && /usr/local/bin/unshare-make.sh distcheck -sj35 && cd --'

alias lic-make='cd $HOME/lic-c-client/build-aux && make -sj35 || cd $OLDPWD'

alias vim-map='vim $HOME/.vimrc'

alias ssh-fix='eval $(ssh-agent) && ssh-add $HOME/.ssh/!(*.pub)'

alias split-struct='$HOME/split-struct.sh' #find in snippets folder
